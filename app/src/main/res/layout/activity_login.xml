<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/icono_agenda"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_tituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textColor="@color/md_theme_onPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <!-- Contenedor para el rectángulo de fondo y el formulario -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        >

        <!-- Rectángulo de fondo gris con esquinas redondeadas -->
        <View
            android:id="@+id/half_background_view"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_gravity="bottom"
            android:background="@drawable/half_bottom_background" />

        <!-- Contenedor del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="24dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_tituloLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="@string/titulo_login"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/lbl_usuario"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:textColorHint="@color/md_theme_onPrimary"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableStart="@drawable/lock_keyhole"
                    android:drawablePadding="8dp"
                    android:hint="@string/lbl_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:textColorHint="@color/md_theme_onPrimary"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ingresar"
                style="@style/RegistroButton"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/btn_ingresar"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_crearCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="132dp"
            android:text="@string/lbl_crear_cuenta"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="16sp" />
    </FrameLayout>
</LinearLayout>

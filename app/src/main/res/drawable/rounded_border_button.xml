        android:color="@color/md_theme_outline" />

    <!-- Definición del borde -->
    <stroke
        android:width="2dp"
        android:color="#90FFFFFF" />

    <!-- Bordes redondeados -->
    <corners
        android:radius="100dp" />

</shape>